<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/BuildingCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Building Code"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/MaxCapacityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Capacity"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="245dp" />

    <TextView
        android:id="@+id/ConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="capacity"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="202dp" />

    <Button
        android:id="@+id/UpdateCapacityUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onUpdateWithUI"
        android:text="Update Capacity"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="390dp" />

    <Button
        android:id="@+id/UpdateCapacityCSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onUpdateWithCSV"
        android:text="Upload a File (CSV)"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="466dp" />

    <TextView
        android:id="@+id/MaxCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max "
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="245dp" />

    <TextView
        android:id="@+id/CurrentCapacityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Capacity"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="202dp" />

    <EditText
        android:id="@+id/NewCapacityInput"
        android:layout_width="79dp"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="335dp" />

    <Spinner
        android:id="@+id/BuildingInput"
        android:layout_width="114dp"
        android:layout_height="42dp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="329dp" />

</androidx.constraintlayout.widget.ConstraintLayout>